<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ameer.aawaz.LearnMainPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="LEARNING"
                android:textColor="@color/line"
                android:textSize="40sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvlesson1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawableRight="@drawable/tick"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson1: Basics of Sign Language"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawableRight="@drawable/tick"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson2: Communication using sign Language"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawableRight="@drawable/tick"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson3: Basics of Sign Language"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawablePadding="40dp"
                    android:drawableRight="@color/background"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson 4: Sign Language for Living Things"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawablePadding="40dp"
                    android:drawableRight="@color/background"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson 5: Sign Language for Scientific Terms"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:drawablePadding="40dp"
                    android:drawableRight="@color/background"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Lesson 6: Sign Language for professionals"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
